{
  "name": "fan-leaderboard-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Fan Token campaign rewards on Chiliz Chain",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network chiliz",
